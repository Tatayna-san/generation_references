<html>
<head>
  <title>Games</title>
</head>
<style type='text/css'>
    .table {
        font-family:Sans-Serif;
        font-size: 16px;
        width: 100%;
        text-align: center;
        border: none;
        background: #f1f0f0;
        margin: 10px;
    }

    .table thead th {
        color: #035749;
        border-bottom: 2px solid #207968;
        border-right: none;
        padding: 7px 17px;
    }

    .table tbody th {
        color: #207968;
        border-bottom: 2px solid #d7ded9;
        border-right: 2px solid #d7ded9;
        padding: 7px 17px;
    }

    .table tbody tr td:hover td {
        text-decoration: underline;
    }
</style>

<table class='table'>
  <thead>
  <tr>
    <th>Title</th>
    <th>Thumbnail</th>
    <th>Short description</th>
    <th>Game url</th>
    <th>Genre</th>
    <th>Platform</th>
    <th>Publisher</th>
    <th>Developer</th>
    <th>Release date</th>
    <th>Profile url</th>
  </tr>
  </thead>
  <tbody>
  <% @games_information.each do |game| %>
    <tr>
      <th>
        <%= game.title%>
      </th>
      <th>
        <%= game.thumbnail%>
      </th>
      <th>
        <%= game.short_description%>
      </th>
      <th>
        <%= game.game_url%>
      </th>
      <th>
        <%= game.genre%>
      </th>
      <th>
        <%= game.platform%>
      </th>
      <th>
        <%= game.publisher%>
      </th>
      <th>
        <%= game.developer%>
      </th>
      <th>
        <%= game.release_date%>
      </th>
      <th>
        <%= game.profile_url%>
      </th>
    </tr>
  <% end %>
  </tbody>
</table>
</html>